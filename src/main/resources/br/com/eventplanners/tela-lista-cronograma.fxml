            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnCadastrarCronograma" disable="true" layoutX="114.0" layoutY="132.0" mnemonicParsing="false" onAction="#cadastrarCronograma" prefHeight="40.0" prefWidth="113.0" style="-fx-background-color: #29abe2;" text="Cadastrar" textAlignment="CENTER" textFill="WHITE">
