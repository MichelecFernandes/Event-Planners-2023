            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnExcluirCronograma" disable="true" layoutX="596.0" layoutY="132.0" mnemonicParsing="false" onAction="#excluirCronograma" prefHeight="40.0" prefWidth="113.0" style="-fx-background-color: #29abe2;" text="Excluir" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
